<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.encount.UserLogin">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/usermail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#AFEEEE"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="@string/userLoginMail"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/userpass"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/userpass"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#AFEEEE"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="@string/userLoginPass"
        android:inputType="textPassword"
        android:layout_marginBottom="200dp"
        android:layout_alignBottom="@+id/loginbtn"
        android:layout_alignLeft="@+id/usermail"
        android:layout_alignStart="@+id/usermail" />

    <androidx.cardview.widget.CardView
        android:id="@+id/loginbtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/usernew"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#AFEEEE"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="50dp"
        android:background="#FFDF1961">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/logintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/userLogin"
                android:textColor="#898989"
                android:textSize="18sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/usernew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userLoginNew"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">
    </LinearLayout>
</RelativeLayout>
